{
  "name": "@reisetra/mono",
  "private": true,
  "homepage": "https://github.com/shubhamxy/reisetra",
  "repository": {
    "type": "git",
    "url": "https://github.com/shubhamxy/reisetra"
  },
  "author": {
    "name": "Shubham Jain",
    "url": "https://github.com/shubhamxy"
  },
  "workspaces": {
    "packages": [
      "packages/mint",
      "packages/maze",
      "packages/soda"
    ],
    "nohoist": [
      "**"
    ]
  },
  "engines": {
    "node": "14.x"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "defaultScope": "global"
    }
  },
  "scripts": {
    "clean": "yarn workspaces foreach -ptv run clean",
    "lint": "yarn workspaces foreach -ptv run lint",
    "prepare": "husky install",
    "commit": "cz",
    "commit:signed": "cz -S",
    "deploy:server": "./scripts/deploy.sh",
    "build:server": "yarn workspace @reisetra/soda build",
    "start:server": "yarn workspace @reisetra/soda start:prod",
    "stop:server": "yarn workspace @reisetra/soda stop:prod",
    "dev:server": "yarn workspace @reisetra/soda dev",
    "build:cms": "yarn workspace @reisetra/maze build",
    "start:cms": "yarn workspace @reisetra/maze start",
    "dev:cms": "yarn workspace @reisetra/maze dev",
    "deploy": "",
    "?prebuild": "yarn workspace @reisetra/rocks build",
    "build": "yarn workspace @reisetra/mint build",
    "start": "yarn workspace @reisetra/mint start",
    "dev": "yarn workspace @reisetra/mint dev"
  }
}
